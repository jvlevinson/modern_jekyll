{
  "name": "modern-jekyll-portfolio",
  "version": "1.0.0",
  "description": "Modern Jekyll portfolio with design tokens, BEM, and comprehensive QA",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jvlevinson/modern_jekyll.git"
  },
  "keywords": [
    "jekyll",
    "portfolio",
    "design-tokens",
    "bem",
    "accessibility",
    "visual-regression",
    "playwright",
    "typescript",
    "oklch"
  ],
  "author": "Jordan V. Levinson",
  "license": "MIT",
  "scripts": {
    "dev:jekyll": "bundle exec jekyll serve --livereload",
    "dev:api": "cd api && bundle exec rackup config.ru -p 4001",
    "dev": "concurrently \"pnpm run dev:jekyll\" \"pnpm run dev:api\" --names \"jekyll,api\" --prefix-colors \"cyan,magenta\" --kill-others",
    "validate:config": "node _tests_/validate-config.js",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:report": "playwright show-report",
    "test:a11y": "bash _tests_/a11y-audit.sh",
    "test": "pnpm run validate:config && pnpm run test:visual && pnpm run test:a11y",
    "prebuild": "pnpm run validate:config",
    "build:ts": "vite build",
    "dev:ts": "vite",
    "preview:ts": "vite preview",
    "lint": "eslint \"onboard/src/**/*.ts\"",
    "lint:fix": "eslint \"onboard/src/**/*.ts\" --fix",
    "linter:script": "./scripts/environment/build/errors/analyze-ESLint_errors.sh",
    "linter": "pnpm linter:script",
    "linter:fix": "pnpm format:fix; pnpm linter:script",
    "type:check": "tsc --noEmit",
    "type:script": "./scripts/environment/build/errors/analyze-TS_errors.sh",
    "typecheck": "pnpm type:script",
    "typecheck:fix": "pnpm format:fix; pnpm type:script",
    "time": "TZ=America/Chicago date +'%Y-%m-%d %I:%M:%S %p CST'",
    "time:script": "./scripts/cmd/bash/update-timestamp.sh",
    "time:windows": "Get-Date -Format 'yyyy-MM-dd hh:mm:ss tt' | ForEach-Object { '$_ CST' }",
    "time:active": "pnpm time:script -s active -f",
    "time:blocked": "pnpm time:script -s blocked -f",
    "time:completed": "pnpm time:script -s completed -f",
    "time:created": "pnpm time:script -s created -f",
    "time:ended": "pnpm time:script -s ended -f",
    "time:paused": "pnpm time:script -s paused -f",
    "time:resume": "pnpm time:script -s resume -f",
    "time:updated": "pnpm time:script -f",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "build": "pnpm run build:ts && bundle exec jekyll build",
    "serve": "bundle exec jekyll serve --livereload",
    "clean": "bundle exec jekyll clean"
  },
  "dependencies": {
    "culori": "^4.0.2"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/dom": "^10.4.1",
    "@types/culori": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitest/ui": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "size-limit": "^11.2.0",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-checker": "^0.11.0",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "name": "Theme Editor Bundle",
      "path": "onboard/assets/dist/editor.bundle.js",
      "limit": "150 KB",
      "gzip": true
    },
    {
      "name": "Theme Editor Bundle (Brotli)",
      "path": "onboard/assets/dist/editor.bundle.js",
      "limit": "50 KB",
      "brotli": true
    }
  ]
}
